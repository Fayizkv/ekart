<div class="container my-5">
    {{#if favorites}}
    <h1 class="text-center mb-4">Favorites</h1>
    {{/if}}
    {{#if homepage}}
    <h1 class="text-center mb-4">Our Featured Products</h1>
    {{/if}}
    {{#if alertMessage}}
        <script>
        alert("{{alertMessage}}");
        </script>
    {{/if}}
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {{#each products}}
        <div class="col">
            <div class="card h-100 shadow-sm">
                <!-- Product Image -->
                <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}"
                    style="height: 200px; object-fit: cover;">

                <!-- Product Content -->
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <a href="/products/view/{{this._id}}" class="text-decoration-none text-dark">{{this.productname}}</a>
                    </h5>

                    <p class="card-text">{{this.description}}</p>
                    <p class="fw-bold">Price: ${{this.prize}}</p>

                    <!-- Aligned Buttons -->
                    <div class="mt-auto">
                        <div class="d-flex justify-content-around gap-2">
                            <!-- Favorite Button -->
                            <form action="/products/addfavorite" method="POST" style="margin: 0;">
                                <input type="hidden" name="productId" value="{{this._id}}">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    ❤️ Favorite
                                </button>
                            </form>

                            <!-- Add to Cart Button -->
                            <form action="/products/addcart" method="POST" style="margin: 0;">
                                <input type="hidden" name="productId" value="{{this._id}}">
                                <button type="submit" class="btn btn-outline-success btn-sm">
                                    Add to Cart
                                </button>
                            </form>

                            <!-- Buy Now Button -->
                            <form action="/products/buy" method="POST" style="margin: 0;">
                                <input type="hidden" name="productId" value="{{this._id}}">
                                <button type="submit" class="btn btn-primary btn-sm">
                                    Buy Now
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>