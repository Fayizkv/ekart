<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">My Favorite Products</h1>
        
        <!-- Row to display favorite products horizontally -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            {{#each favorites}}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.productname}}"
                        style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{this.productname}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="fw-bold">Price: ${{this.prize}}</p>
                        <div class="d-flex justify-content-between mt-auto">
                            <!-- Button to remove from favorites (POST) -->
                            <form action="/remove-favorite" method="POST">
                                <input type="hidden" name="productId" value="{{this._id}}">
                                <button type="submit" class="btn btn-outline-danger btn-sm">❤️ Remove from Favorites</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
